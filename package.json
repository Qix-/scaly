{
  "name": "scaly",
  "version": "0.1.0",
  "description": "Minimalistic, composable cache and database layering inspired by CPU caches",
  "main": "index.js",
  "files": [
    "index.js",
    "LICENSE"
  ],
  "scripts": {
    "test": "best -v -I test.js && xo"
  },
  "keywords": [
    "cache",
    "layers",
    "database",
    "generators",
    "fallback"
  ],
  "xo": {
    "rules": {
      "require-yield": [0],
      "unicorn/no-reduce": [0],
      "no-await-in-loop": [0],
      "operator-linebreak": [0]
    }
  },
  "author": "Josh Junon (https://github.com/qix-)",
  "license": "MIT",
  "devDependencies": {
    "@zeit/best": "0.7.3",
    "xo": "0.32.1"
  }
}
